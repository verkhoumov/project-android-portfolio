<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#362964">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#25184c">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_techs"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp">
                    <ImageView
                        android:id="@+id/projectInfoImage"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="fitCenter"
                        android:padding="2dp"
                        android:background="@drawable/photo2" />
                    <TextView
                        android:id="@+id/projectInfoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Название проекта"
                        android:textColor="#f8f6ff"
                        android:textStyle="bold"
                        android:textSize="26dp"
                        android:textAlignment="center"
                        android:layout_marginTop="30dp"
                        android:lineSpacingExtra="8dp" />
                    <TextView
                        android:id="@+id/projectInfoDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Краткое описание проекта"
                        android:textColor="#7e71a5"
                        android:textSize="22dp"
                        android:textAlignment="center"
                        android:layout_marginTop="30dp"
                        android:lineSpacingExtra="8dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:weightSum="100"
                        android:layout_marginTop="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Начало разработки"
                                android:textColor="#7e71a5"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textAlignment="center" />
                            <TextView
                                android:id="@+id/projectInfoStarted"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Дата"
                                android:textColor="#f8f6ff"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Публичный релиз"
                                android:textColor="#7e71a5"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textAlignment="center" />
                            <TextView
                                android:id="@+id/projectInfoFinished"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Дата"
                                android:textColor="#f8f6ff"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp">
                <TextView
                    android:id="@+id/projectInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="В данный момент описание проекта отсутствует!"
                    android:textColor="#b9ace2"
                    android:textSize="20dp"
                    android:lineSpacingExtra="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>