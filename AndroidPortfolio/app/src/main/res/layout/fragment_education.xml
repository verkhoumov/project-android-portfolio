<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.verkhoumov.androidportfolio.EducationFragment"
    android:background="#33275e">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="top">
            <TextView
                android:id="@+id/titleEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Образование"
                android:textColor="#f8f6ff"
                android:textStyle="bold"
                android:textSize="24dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/educationRecyclerView"
                android:paddingTop="15dp" />

            <TextView
                android:id="@+id/titleSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Навыки"
                android:textColor="#f8f6ff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:paddingTop="30dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/skillsRecyclerView"
                android:paddingTop="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>