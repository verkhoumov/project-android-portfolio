<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/portfolioItem">
    <TextView
        android:id="@+id/portfolioItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ниже представлены самые последние проекты, над которыми я работал или веду работу в данный момент."
        android:textColor="#7e71a5"
        android:textSize="20dp"
        android:lineSpacingExtra="6dp"
        android:visibility="gone"
        android:layout_marginBottom="30dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/portfolioItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Тип проекта"
            android:textColor="#f4f0ff"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/portfolioItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата релиза"
            android:textColor="#7e71a5"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/portfolioItemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:background="@drawable/photo2" />
        <TextView
            android:id="@+id/portfolioItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название проекта"
            android:textColor="#f8f6ff"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>
</LinearLayout>