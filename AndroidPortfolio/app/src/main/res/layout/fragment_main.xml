<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25184c"
    tools:context="ru.verkhoumov.androidportfolio.MainFragment"
    android:id="@+id/userProfile">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_code"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:textSize="30dp"
            android:textColor="#f8f6ff"
            android:text="Автор"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/profileAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="italic"
            android:textColor="#7e71a5"
            android:paddingTop="12dp"
            android:text="Специализация" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="40dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/dataList1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/profileCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dataList1"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBaseline="@id/dataList1"
                    android:text="Город"
                    android:textSize="20dp"
                    android:textColor="#f8f6ff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/dataList2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/profileOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dataList2"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBaseline="@id/dataList2"
                    android:text="Возраст"
                    android:textSize="20dp"
                    android:textColor="#f8f6ff"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/dataList3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/profileExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dataList3"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBaseline="@id/dataList3"
                    android:text="Опыт"
                    android:textSize="20dp"
                    android:textColor="#f8f6ff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/dataList4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/profileProjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dataList4"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBaseline="@id/dataList4"
                    android:text="Проекты"
                    android:textSize="20dp"
                    android:textColor="#f8f6ff"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
